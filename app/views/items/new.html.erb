
<h3 class="container">Create new item</h3>
 <div class="row justify-content-md-center">
  <div class="col-10">

     <%= form_for @item do |f| %>  
        <div class="form-group row">
          <%= f.label :title, class: "col-6 col-form-label text-dark" %>
          <div class="col-7">
            <%= f.text_field :title, class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-6 col-form-label text-dark" %>
          <div class="col-7">
            <%= f.text_area :description, class: "form-control-file form-control shadow rounded" %>
          </div>
        </div>

          <div class="form-group row">
          <%= f.label :image, class: "col-6 col-form-label text-dark" %>
          <div class="col-7">
            <%= f.text_field :image, class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-6 col-form-label text-dark" %>
          <div class="col-7"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name, 
            {:prompt => "Make your selection from the list below (can be empty)"}, {:multiple => true, size: 3, class: "custom-select shadow rounded"}) %>

          </div>
        </div>


       


        <%= f.fields_for :stock do |a| %>

          <div class="form-group row">
            <%=a.label :price, class: "col-6 col-form-label text-dark"  %>
            <div class="col-7"> 
              <%= a.text_field :price, rows: 10, class: "form-control shadow rounded" %>
            </div>  
          </div>
          <div class="form-group row">
            <%=a.label :quantity, class: "col-6 col-form-label text-dark"  %>
            <div class="col-7"> 
              <%= a.text_field :quantity, rows: 10, class: "form-control shadow rounded" %>
            </div>  
          </div>

      
        <% end %>  
        
        

        <div class="form-group">
          <%= f.submit "create item", class: "btn btn-outline-dark btn-lg" %>
        </div>
    <%end%>
  </div>
   
 </div>    

  

